  <% @bookings.each  do |booking| %>

   <div class="booking-card">
  <%= cl_image_tag(booking.mentor.photo.key, class:"avatar-large") %>
  <div class="booking-card-content">
    <p><small><%= booking.start_time.strftime("%A, %d %b %Y %l:%M %p") %></small></p>
    <p><%= booking.mentor.user.name %></p>
    <p><%= booking.status %></p>
  </div>

  <div class="booking-card-actions">
    <%= link_to booking_path(booking), method: :delete, data: { turbo_method: "delete", turbo_confirm: "Are you sure?" } do %>
      Cancel <i class="far fa-trash-alt"></i>
    <% end %>
  </div>
</div>
  <% end %>
