<!DOCTYPE html>
<html>
  <head>
    <title>mentors.io</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render "shared/flashes" %>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <div class="container-fluid">
        <%= link_to 'mentors.io', mentors_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <% if current_user.a_mentor? %>
            <li class="nav-item active">
              <%= link_to 'Requests', mentor_mentor_bookings_path, class: 'nav-link' %>
            </li>
          <% end %>
          <% if Mentor.where(user: current_user).first.nil? %>
            <li class="nav-item active">
            <%= link_to 'Become a mentor', new_mentor_path, class: 'nav-link' %>
            </li>
          <% end %>
          <li class="nav-item active">
          <%= link_to 'Bookings', bookings_path, class: 'nav-link' %>
          </li>
          <li class="nav-item active">
          <%= link_to 'Log out',  destroy_user_session_path, class: 'nav-link', data: {turbo_method: :delete} %>
          </li>
        <% else %>
          <li>
            <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
          </li>
          <li>
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
  <%= yield %>

  </body>
</html>
